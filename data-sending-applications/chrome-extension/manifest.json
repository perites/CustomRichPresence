{
  "manifest_version": 3,
  "name": "CustomRichPresence",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": [
        "https://animejoy.site/*"
      ],
      "js": [
        "content_CRP.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "nativeMessaging"
  ],
  "icons": {
    "48": "logo_anime_joy.png",
    "128": "logo_anime_joy.png"
  }
}

	
